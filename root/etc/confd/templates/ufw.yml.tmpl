---
- hosts: ufwtarget
  remote_user: {{ getenv "UFW_USER" }}
  tasks:
    - name: Gather local facts
      delegate_to: 127.0.0.1
      setup:
      register: local_facts
    - name: Show
      debug:
        var: local_facts
    - name: Allow traffic to port 111 from this host
      become: yes
      ufw:
        rule: allow
        proto: any
        port: 111
        from_ip: "{{  }}"
      tags: ['ufw']
